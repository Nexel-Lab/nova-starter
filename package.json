{
  "name": "nova-starter",
  "version": "2024.3.10",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nexel-Lab/nova-starter.git"
  },
  "author": "Jirayu Ninlapun",
  "bugs": {
    "url": "https://github.com/Nexel-Lab/nova-starter/issues"
  },
  "homepage": "https://nova.nexellab.com",
  "scripts": {
    "format": "prettier --write \"app/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "build": "nest build",
    "start": "nest start",
    "start:prod": "node dist/app/main",
    "db:generate": "prisma generate",
    "db:generate:acc": "prisma generate --accelerate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db": "yarn db:generate && yarn db:push",
    "deploy": "yarn db && yarn build",
    "gql:gen": "ts-node generate-typings.ts",
    "lint": "eslint \"{app,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rimraf dist out"
  },
  "prisma": {
    "schema": "./app/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@apollo/server": "^4.10.1",
    "@aws-sdk/client-s3": "^3.525.0",
    "@aws-sdk/lib-storage": "^3.525.1",
    "@aws-sdk/s3-request-presigner": "^3.525.0",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.2",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/serve-static": "^4.0.1",
    "@prisma/client": "^5.10.2",
    "@prisma/extension-accelerate": "^1.0.0",
    "@sentry/node": "^7.105.0",
    "@sentry/profiling-node": "^7.105.0",
    "@sentry/tracing": "^7.105.0",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-type-json": "^0.3.2",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "maath": "^0.10.7",
    "minio": "^7.1.3",
    "nodemailer": "^6.9.11",
    "prisma-graphql-type-decimal": "^3.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "superjson": "^2.2.1",
    "uuidv7": "^0.6.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "prisma-dbml-generator": "^0.12.0",
    "prisma-nestjs-graphql": "^20.0.2",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "yarn-upgrade-all": "^0.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "app",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
